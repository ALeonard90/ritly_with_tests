<h2>Welcome to Ritly</h2>

<% if @links.empty? %>
  <h3>No urls</h3>
  <p>please enter a url in the form below</p>
<% else %>
  <% @links.each do |link| %>
    <%= link_to link.url, link.short_code  %>
  <% end %>
<% end %>

<%= form_for @link do |f|  %>
  <%= f.text_field :url  %>
  <%= f.submit 'Submit'  %>
<% end %>